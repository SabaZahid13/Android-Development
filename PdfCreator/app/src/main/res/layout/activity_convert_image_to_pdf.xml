<!-- res/layout/activity_main.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConvertImageToPdf">

    <TextView
        android:id="@+id/mainHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:fontFamily="monospace"
        android:text="IMAGES TO PDF CONVERTER"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/mainHeading"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        android:background="@drawable/blue_border"
        android:src="@android:drawable/ic_menu_gallery"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedImage"
        android:layout_margin="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalRecyclerView"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_marginEnd="2dp"
            tools:listitem="@layout/item_layout" />

        <ImageButton
            android:id="@+id/selectImagesButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_alignEnd="@id/horizontalRecyclerView"
            android:src="@drawable/baseline_add_a_photo_24"
            android:tooltipText="Add Images" />

    </RelativeLayout>

    <Button
        android:id="@+id/generatePdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Generate PDF"/>

</RelativeLayout>